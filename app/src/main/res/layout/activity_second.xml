<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondActivity">


  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="96dp"
      android:layout_marginBottom="40dp"
      android:text="CONGRATULATIONS!"
      android:textColor="@color/turqoise"
      android:textSize="22sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/trophy_ic"
      app:layout_constraintLeft_toLeftOf="parent" />

  <ImageView
      android:id="@+id/trophy_ic"
      android:layout_width="167dp"
      android:layout_height="131dp"
      android:layout_marginLeft="120dp"
      android:layout_marginTop="156dp"
      android:src="@drawable/ic_trophy"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/teamlabel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="120dp"
      android:layout_marginTop="32dp"
      android:textColor="@color/turqoise"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/trophy_ic" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:layout_marginLeft="5dp"
      android:text="is the winner"
      android:textColor="@color/turqoise"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintLeft_toRightOf="@+id/teamlabel"
      app:layout_constraintTop_toBottomOf="@+id/trophy_ic"  />

  <ImageButton
      android:id="@+id/back_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="20dp"
      app:layout_constraintStart_toStartOf="parent"
      android:background="@drawable/ic_baseline_arrow_back_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>