<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="20dp">

    <View
        android:layout_width="1dp"
        android:layout_height="530dp"
        android:layout_marginTop="20dp"
        android:background="@color/turqoise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="56dp"
        android:text="TEAM A"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginRight="76dp"
        android:text="TEAM B"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_add2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/btn_backg"
        android:text="+2 Points"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:backgroundTint="@color/turqoise"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_add1" />

    <Button
        android:id="@+id/btn_add1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/btn_backg"
        android:text="+1 Point"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:backgroundTint="@color/turqoise"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_add3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/btn_backg"
        android:text="+3 Points"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:backgroundTint="@color/turqoise"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_add2" />

    <TextView
        android:id="@+id/scorea"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/btn_backg"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teama" />

    <TextView
        android:id="@+id/scoreb"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="76dp"
        android:background="@drawable/btn_backg"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamb" />

    <Button
        android:id="@+id/btn_add22"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginRight="52dp"
        android:background="@drawable/btn_backg"
        android:text="+2 Points"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:backgroundTint="@color/turqoise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_add12" />

    <Button
        android:id="@+id/btn_add32"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginRight="52dp"
        android:background="@drawable/btn_backg"
        android:text="+3 Points"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:backgroundTint="@color/turqoise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_add22" />

    <Button
        android:id="@+id/btn_add12"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginRight="52dp"
        android:background="@drawable/btn_backg"
        android:text="+1 Point"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:backgroundTint="@color/turqoise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="164dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/btn_backg"
        android:text="Reset"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:backgroundTint="@color/turqoise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>